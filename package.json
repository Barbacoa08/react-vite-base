{
	"name": "react-vite-base",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"all": "pnpm clean && pnpm i && pnpm style-check && pnpm build",
		"github": "pnpm clean && pnpm i && pnpm lint && pnpm build",
		"clean": "rm -rf build dist",
		"lint": "biome ci ./src",
		"format": "biome format --write ./src",
		"style-check": "biome check --write ./src",
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "vite preview"
	},
	"dependencies": {
		"react": "18.3.1",
		"react-dom": "18.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/react": "18.3.12",
		"@types/react-dom": "18.3.1",
		"@vitejs/plugin-react": "4.3.4",
		"globals": "15.12.0",
		"typescript": "5.6.2",
		"vite": "6.0.1"
	}
}
